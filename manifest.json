{
   "manifest_version": 3,
   "name": "Docs Progress",
   "description": "Writing metrics and progress UI for Google Docs (word counts, progress bars, live updates).",
   "version": "0.1.0",
   "permissions": [
      "storage",
      "scripting",
      "activeTab",
      "identity",
      "identity.email",
      "sidePanel",
      "tabs"
   ],
   "host_permissions": ["https://docs.google.com/*"],
   "action": {
      "default_title": "Docs Progress",
      "default_icon": {
         "16": "icons/icon-16.png",
         "32": "icons/icon-32.png",
         "48": "icons/icon-48.png",
         "128": "icons/icon-128.svg"
      }
   },
   "oauth2": {
      "client_id": "357399005975-01am5j1d5lbg91alpm08drdt3bn4ppn6.apps.googleusercontent.com",
      "scopes": ["https://www.googleapis.com/auth/documents.readonly"]
   },
   "background": {
      "service_worker": "src/background.js"
   },
   "content_scripts": [
      {
         "matches": ["https://docs.google.com/document/*"],
         "js": ["src/content/doc_content.js"],
         "run_at": "document_idle"
      }
   ],
   "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.svg"
   }
}
